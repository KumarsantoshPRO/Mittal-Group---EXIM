<mvc:View
    controllerName="zmg.pro.exim.zprolocimport.controller.Details"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:uxap="sap.uxap"
>
    <uxap:ObjectPageLayout
        id="ObjectPageLayout"
        upperCaseAnchorBar="true"
        showFooter="true"
    >
        <uxap:sections>
            <uxap:ObjectPageSection
                id="idOPSHeaderDetails"
                titleUppercase="true"
                title="Header Details"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        id="idV2OPSubHeaderDetails"
                        title="Header Details"
                        titleUppercase="true"
                    >
                        <uxap:blocks>
                            <form:SimpleForm
                                editable="true"
                                class="sapUiResponsiveContentPadding"
                                layout="ColumnLayout"
                                columnsL="2"
                                columnsM="2"
                                columnsXL="2"
                            >
                                <form:content>
                                    <core:Title text="PI Number: -------" />
                                    <Label text='Contract Number' />
                                    <Input   />
                                    <Label text='PI NO' />
                                    <Input  />
                                    <Label
                                        text='PI Date'
                                    />
                                    <Input   />
                                    <Label
                                        text='PO'
                                    />
                                    <Input   />
                                    <Label
                                        text='Shipment Last Date'
                                    />
                                    <Input   />
                                    <Label
                                        text='Port of Loading'
                                    />
                                    <Input   />
                                    <Label text='Final ICD Location' />
                                    <Input   />
                                    <Label
                                        text='LC Issuing Bank'
                                    />
                                    <Input  />
                                    <Label text='Shipment Type' />
                                    <Input  />
                                    <Label text='LC Type' />
                                    <Input  />
                                    <Label
                                        text='LC Issue Date'
                                    />
                                    <Input  />
                                    <Label
                                        text='LC Expiry Date'
                                    />
                                    <Input  />
                                    <!-- 12 -->
                                    <Label text='Port of Discharge ' />
                                    <Input  />
                                    <Label text='LC Charges Outside India ' />
                                    <Input  />
                                    <Label text='LC Recieving Bank' />
                                    <Input  />
                                 
                                    <Label
                                        text='Inco Terms'
                                    />
                                    <Input   />
                                    <Label
                                        text='Tolerance Value'
                                    />
                                    <Input   />
                                    <Label text='Tolerance Quantity' />
                                    <Input   />
                                    <Label
                                        text='Trans-Shipment'
                                    />
                                    <Input   />
                                    <Label
                                        text='Discounting charges by buyer'
                                    />
                                    <Input   />
                                    <Label text='Payment Terms ' />
                                    <Input   />
                                    <Label text='Tolerance Qty % ' />
                                    <Input   />
                                </form:content>
                            </form:SimpleForm>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection
                id="idV2OPSItemsDetail"
                titleUppercase="true"
                title="Items Details"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        id="idV2OPSubItemsDetail"
                        title="Items Details"
                        titleUppercase="true"
                    >
                        <uxap:blocks>
                            <Table
                id="idTableLCList"
                sticky="ColumnHeaders,HeaderToolbar"
                growing="true"
            >
                <columns>
                    <Column>
                        <Text text="PO Item" />
                    </Column>

                    <Column demandPopin="true">
                        <Text text="Import Material" />
                    </Column>
                    <Column demandPopin="true">
                        <Text text="Item Description" />
                    </Column>
                    <Column>
                        <Text text="Quantity" />
                    </Column>
                    <Column>
                        <Text text="Per Unit Price" />
                    </Column>
                    <Column>
                        <Text text="PO UOM" />
                    </Column>
                    <Column>
                        <Text text="Total Value" />
                    </Column>
                    <Column>
                        <Text text="PO Currency " />
                    </Column>
                    <Column>
                        <Text text="Exchanging Rate " />
                    </Column>
                    <Column>
                        <Text text="INR Value " />
                    </Column>
                    

                </columns>
                <ColumnListItem
                >
                    <cells>
                        <Input   />
                        <Input  />
                        <Input  />
                        <Input  />
                        <Input  />
                        <Input  />
                        <Input  />
                        <Input  />
                        <Input  />
                        <Input  />
                    </cells>
                </ColumnListItem>
            </Table>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>

        <uxap:footer>
            <Bar id="idV2Bar">
                <contentRight>
                    <Button
                        visible="{oViewModel>/btnvisible}"
                        id="idBtn_Cancel"
                        text="Cancel"
                        type="Reject"
                        press="onCancel"
                    />
                    <Button
                        visible="{oViewModel>/btnvisible}"
                        id="idBtn_SaveLCDetails"
                        text="Save"
                        type="Accept"
                    />
                </contentRight>
                <contentLeft>
                <Button text="Back" press="onBack"></Button>
                </contentLeft>
            </Bar>
        </uxap:footer>
    </uxap:ObjectPageLayout>
</mvc:View>
