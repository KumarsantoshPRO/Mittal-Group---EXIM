<mvc:View
    controllerName="zpro.sk.mittalcoin.exim.loc.import.locimport.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    height="100%"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:table="sap.ui.table"
    xmlns:columnmenu="sap.m.table.columnmenu"
    xmlns:sap.ui.fl="sap.ui.fl"
>
    <f:DynamicPage fitContent="true">
        <f:title>
            <f:DynamicPageTitle stateChange="onDPTStateChange">
                <f:heading>
                    <Title
                        text="Letter of credit - import"
                        textAlign="Center"
                        titleStyle="H3"
                    />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar
                        id="filterbar"
                        persistencyKey="myPersKey"
                        useToolbar="false"
                        search="onSearch"
                    >
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                name="Name"
                                label="LC Number"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <Input
                                        value=""
                                        placeholder="LC Number"
                                        showValueHelp="true"
                                        valueHelpRequest="onLCNumberValuelHelp"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem
                                name="Name1"
                                label="Contact Number"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <Input
                                        value=""
                                        placeholder="Contact Number"
                                        showValueHelp="true"
                                        valueHelpRequest="onContactNumberValuelHelp"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem
                                name="Name2"
                                label="PI Number"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <Input
                                        value=""
                                        placeholder="PI Number"
                                        showValueHelp="true"
                                        valueHelpRequest="onPINumberValuelHelp"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <table:Table
                id="table"
                sort="onSort"
                columnResize="onColumnResize"
                columnMove="onColumnMove"
                rowMode="Auto"
                ariaLabelledBy="title"
                sap.ui.fl:flexibility="sap/m/flexibility/EngineFlex"
                selectionMode="Single"
                selectionBehavior="Row"
                rows="{oModelForTable>/}"
                showColumnVisibilityMenu="true"
                enableColumnFreeze="false"
                enableCellFilter="true"
                columnSelect="onColumnSelect"
                cellContextmenu="onProductIdCellContextMenu"
                enableGrouping="true"
                rowSelectionChange="onShowLCDetails"
                rowActionCount="2"
            >
                <table:extension>
                    <OverflowToolbar style="Clear">
                        <Title id="title" />
                        <ToolbarSpacer />
                        <Button
                            text="Create"
                            press="onAddNewLOC"
                            type="Transparent"
                            tooltip="Create new"
                        />
                        <Button
                            id="idDeleteRow"
                            text="Delete"
                            press="onDeleteRow"
                            type="Transparent"
                            enabled="false"
                            visible="false"
                        />
                        <Button
                            icon="sap-icon://action-settings"
                            press="openPersoDialog"
                        />
                        <VBox visible="false">
                            <SegmentedButton selectedKey="less">
                                <items>
                                    <SegmentedButtonItem
                                        icon="sap-icon://detail-less"
                                        key="less"
                                    />
                                    <SegmentedButtonItem
                                        icon="sap-icon://detail-more"
                                    />
                                </items>
                            </SegmentedButton>
                        </VBox>
                        <Button
                            icon="sap-icon://excel-attachment"
                            press="onExport"
                        />
                    </OverflowToolbar>
                </table:extension>

                <table:dependents>
                    <columnmenu:Menu id="menu">
                        <columnmenu:items>
                            <columnmenu:ActionItem
                                icon="sap-icon://sort"
                                label="Sort"
                                press="onColumnHeaderItemPress"
                            />
                            <columnmenu:ActionItem
                                icon="sap-icon://filter"
                                label="Filter"
                                press="onColumnHeaderItemPress"
                            />
                            <columnmenu:ActionItem
                                icon="sap-icon://group-2"
                                label="Groups"
                                press="onColumnHeaderItemPress"
                            />

                            <columnmenu:ActionItem
                                icon="sap-icon://table-column"
                                label="Columns"
                                press="onColumnHeaderItemPress"
                            />
                        </columnmenu:items>
                    </columnmenu:Menu>
                </table:dependents>
                
                <table:noData>
                    <IllustratedMessage enableVerticalResponsiveness="true" />
                </table:noData>

                <table:columns>
                    <table:Column
                        id="LcNo"
                        sortProperty="LcNo"
                        headerMenu="menu"
                    >
                        <Label text="LC Number" />
                        <table:template>
                            <Label text="{oModelForTable>LcNo}" />
                        </table:template>
                    </table:Column>
                    <table:Column
                        id="ContractNo"
                        sortProperty="ContractNo"
                        headerMenu="menu"
                    >
                        <Label text="Contact No." />
                        <table:template>
                            <Label text="{oModelForTable>ContractNo}" />
                        </table:template>
                    </table:Column>

                    <table:Column
                        id="PiNo"
                        sortProperty="PiNo"
                        headerMenu="menu"
                    >
                        <Label text="PI No." />
                        <table:template>
                            <Label text="{oModelForTable>PiNo}" />
                        </table:template>
                    </table:Column>
                    <table:Column
                        id="PiDate"
                        sortProperty="PiDate"
                        headerMenu="menu"
                    >
                        <Label text="PI Date" />
                        <table:template>
                            <Label text="{path:'oModelForTable>PiDate', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'dd/MM/yyyy'}}" />
                        </table:template>
                    </table:Column>
                    <table:Column
                        id="Po"
                        sortProperty="Po"
                        headerMenu="menu"
                    >
                        <Label text="PO Number" />
                        <table:template>
                            <Label text="{oModelForTable>Po}" />
                        </table:template>
                    </table:Column>

                    <table:Column
                        id="ShipmetLastDate"
                        sortProperty="ShipmetLastDate"
                        headerMenu="menu"
                    >
                        <Label text="Shipment Last date" />
                        <table:template>
                            <Label text="{path:'oModelForTable>ShipmetLastDate', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'dd/MM/yyyy'}}" />
                        </table:template>
                    </table:Column>
                    <table:Column
                        id="PortOfLoading"
                        sortProperty="PortOfLoading"
                        headerMenu="menu"
                    >
                        <Label text="Port of loading" />
                        <table:template>
                            <Label text="{oModelForTable>PortOfLoading}" />
                        </table:template>
                    </table:Column>
                    <table:Column
                        id="FinalIcdLocation"
                        sortProperty="FinalIcdLocation"
                        headerMenu="menu"
                    >
                        <Label text="Final ICD Location" />
                        <table:template>
                            <Label text="{oModelForTable>FinalIcdLocation}" />
                        </table:template>
                    </table:Column>
                    <table:Column
                        id="LcIssuingBank"
                        sortProperty="LcIssuingBank"
                        headerMenu="menu"
                    >
                        <Label text="LC Issuing Bank" />
                        <table:template>
                            <Label text="{oModelForTable>LcIssuingBank}" />
                        </table:template>
                    </table:Column>
                </table:columns>

                <table:rowActionTemplate>
                    <table:RowAction>
                        <table:items>
                            <table:RowActionItem
                                type="Navigation"
                                press="onShowLCDetails"
                            />
                            <table:RowActionItem
                                type="Delete"
                                press="onDeletePress"
                                icon="sap-icon://delete"
                            />
                        </table:items>
                    </table:RowAction>
                </table:rowActionTemplate>
            </table:Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
