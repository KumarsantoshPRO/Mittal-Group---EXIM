<core:FragmentDefinition
    height="100%"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns:sap.ui.fl="sap.ui.fl"
>
    <table:Table
        id="ImportTableEdit"
        sort="onSort"
        columnResize="onColumnResize"
        columnMove="onColumnMove"
        rowMode="Auto"
        ariaLabelledBy="title"
        sap.ui.fl:flexibility="sap/m/flexibility/EngineFlex"
        selectionMode="None"
        selectionBehavior="Row"
        rows="{oModelForItemTable>/}"
        showColumnVisibilityMenu="true"
        enableColumnFreeze="false"
        enableCellFilter="true"
        columnSelect="onColumnSelect"
        cellContextmenu="onProductIdCellContextMenu"
        enableGrouping="true"
        rowSelectionChange="onShowLCDetails"
       
    >
    
        <table:extension>
            <OverflowToolbar style="Clear">
                <Title
                    id="title"
                    text="{myPropertyValues>/title}"
                />
                <ToolbarSpacer />
                <Button
                    text="Create"
                    press="onAddNewLOCItem"
                    type="Transparent"
                    tooltip="Create new"
                    visible="false"
                />
                <Button
                    id="idDeleteRow"
                    text="Delete"
                    press="onDeleteRow"
                    type="Transparent"
                    enabled="false"
                    visible="false"
                />
                <Button
                    icon="sap-icon://action-settings"
                    press="openPersoDialog"
                    visible="false"
                />
                <VBox visible="false">
                    <SegmentedButton selectedKey="less">
                        <items>
                            <SegmentedButtonItem
                                icon="sap-icon://detail-less"
                                key="less"
                            />
                            <SegmentedButtonItem
                                icon="sap-icon://detail-more"
                            />
                        </items>
                    </SegmentedButton>
                </VBox>
                <Button
                    icon="sap-icon://excel-attachment"
                    press="onExport"
                    visible="false"
                />
            </OverflowToolbar>
        </table:extension>

        <table:noData>
            <IllustratedMessage enableVerticalResponsiveness="true" />
        </table:noData>

        <table:columns>
            <table:Column
                id="LcNo"
                sortProperty="LcNo"
                headerMenu="menu"
            >
                <Label text="LC Number" />
                <table:template>
                    <Input value="{oModelForItemTable>LcNo}" />
                </table:template>
            </table:Column>
            <table:Column
                id="Ebelp"
                sortProperty="Ebelp"
                headerMenu="menu"
            >
                <Label text="PO Number Item" />
                <table:template>
                    <Input value="{oModelForItemTable>Ebelp}" />
                </table:template>
            </table:Column>

            <table:Column
                id="Matnr"
                sortProperty="Matnr"
                headerMenu="menu"
            >
                <Label text="Material Number" />
                <table:template>
                    <Input value="{oModelForItemTable>Matnr}" />
                </table:template>
            </table:Column>
            <table:Column
                id="Mtart"
                sortProperty="Mtart"
                headerMenu="menu"
            >
                <Label text="Material Description" />
                <table:template>
                    <Input value="{oModelForItemTable>Mtart}" />
                </table:template>
            </table:Column>
            <table:Column
                id="Meins"
                sortProperty="Meins"
                headerMenu="menu"
            >
                <Label text="UoM" />
                <table:template>
                    <Input value="{oModelForItemTable>Meins}" />
                </table:template>
            </table:Column>

            <table:Column
                id="Menge"
                sortProperty="Menge"
                headerMenu="menu"
            >
                <Label text="Quantity" />
                <table:template>
                    <Input value="{oModelForItemTable>Menge}" />
                </table:template>
            </table:Column>
            <table:Column
                id="PoCurr"
                sortProperty="PoCurr"
                headerMenu="menu"
            >
                <Label text="PO Currency" />
                <table:template>
                    <Input value="{oModelForItemTable>PoCurr}" />
                </table:template>
            </table:Column>
            <table:Column
                id="UnitPrice"
                sortProperty="UnitPrice"
                headerMenu="menu"
            >
                <Label text="Unit Price" />
                <table:template>
                    <Input value="{oModelForItemTable>UnitPrice}" />
                </table:template>
            </table:Column>
            <table:Column
                id="TotValue"
                sortProperty="TotValue"
                headerMenu="menu"
            >
                <Label text="Total Price" />
                <table:template>
                    <Input value="{oModelForItemTable>TotValue}" />
                </table:template>
            </table:Column>
        </table:columns>
    </table:Table>
</core:FragmentDefinition>
