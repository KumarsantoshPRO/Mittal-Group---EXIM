<mvc:View
    controllerName="zgm.pro.exim.pdfprint.pdf.controller.Main"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:svm="sap.ui.comp.smartvariants"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
>
    <f:DynamicPage
        showFooter="false"
        fitContent="true"
    >
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Filter Bar" />
                </f:heading>
                <f:actions>
                    <Button
                        id="idBtnDPTFilterGo"
                        text="Search"
                        press="onShowDetails"
                        type="Emphasized"
                        icon="sap-icon://search"
                    />
                    <Button
                        id="idBtnDPTFilterClear"
                        text="Clear"
                        press="onClearDetails"
                        type="Attention"
                        icon="sap-icon://clear-filter"
                    />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <form:SimpleForm
                        editable="true"
                        layout="ColumnLayout"
                        adjustLabelSpan="true"
                        singleContainerFullSize="true"
                    >
                        <form:content>
                            <Label text="Document Number" />
                            <Input
                                value=""
                                valueHelpIconSrc="sap-icon://value-help"
                                showValueHelp="true"
                                autocomplete="true"
                                placeholder="Document Number"
                            />

                            <Label text="Company Name" />
                            <Input
                                value=""
                                valueHelpIconSrc="sap-icon://value-help"
                                showValueHelp="true"
                                autocomplete="true"
                                placeholder="Company Name"
                            />

                            <Label text="Document Type" />
                            <Input
                                value=""
                                valueHelpIconSrc="sap-icon://value-help"
                                showValueHelp="true"
                                autocomplete="true"
                                placeholder="Document Type"
                            />

                            <Label text="Fiscal Year" />
                            <DatePicker
                                displayFormat="yyyy"
                                valueFormat="yyyy"
                                placeholder="Fiscal Year"
                            />

                            <Label text="Date" />
                            <DateRangeSelection
                                value=""
                                placeholder="Date Range"
                            />
                        </form:content>
                    </form:SimpleForm>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <Table
                items="{genericAlias>/items}"
                mode="MultiSelect"
                sticky="ColumnHeaders,HeaderToolbar"
                inset="false"
                growing="true"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            text="Document List"
                            level="H2"
                        />
                        <Button
                            tooltip="Sort"
                            icon="sap-icon://sort"
                            press="handleSortButtonPressed"
                        />
                        <Button
                            tooltip="Filter"
                            icon="sap-icon://filter"
                            press="handleFilterButtonPressed"
                        />
                        <Button
                            tooltip="Group"
                            icon="sap-icon://group-2"
                            press="handleGroupButtonPressed"
                        />

                        <ToolbarSpacer />
                        <Button
                            text="Show Document items"
                            press="onShowDocumentItems"
                            type="Emphasized"
                            icon="sap-icon://popup-window"
                        />
                        <Button
                            text="Clear Selections"
                            press="onClearSelection"
                            type="Attention"
                            icon="sap-icon://clear-all"
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Document No." />
                    </Column>

                    <Column demandPopin="true">
                        <Text text="Company" />
                    </Column>
                    <Column demandPopin="true">
                        <Text text="Year" />
                    </Column>
                    <Column demandPopin="true">
                        <Text text="Amount" />
                    </Column>
                </columns>
                <ColumnListItem>
                    <cells>
                        <ObjectStatus
                            text="{genericAlias>documentNumber}"
                            state="Success"
                        />
                        <Text text="{genericAlias>companyCode}" />
                        <Text text="{genericAlias>year}" />
                        <Text text="{genericAlias>amount}" />
                    </cells>
                </ColumnListItem>
            </Table>
        </f:content>

        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    type="Emphasized"
                    text="Print"
                    icon="sap-icon://print"
                />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
