<core:FragmentDefinition
    height="100%"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns:sap.ui.fl="sap.ui.fl"
>
    <table:Table
        id="ImportTableEdit"
        sort="onSort"
        columnResize="onColumnResize"
        columnMove="onColumnMove"
        rowMode="Auto"
        ariaLabelledBy="title"
        sap.ui.fl:flexibility="sap/m/flexibility/EngineFlex"
        selectionMode="None"
        selectionBehavior="Row"
        rows="{oModelForItemTable>/results/}"
        showColumnVisibilityMenu="true"
        enableColumnFreeze="false"
        enableCellFilter="true"
        columnSelect="onColumnSelect"
        cellContextmenu="onProductIdCellContextMenu"
        enableGrouping="true"
        rowSelectionChange="onShowLCDetails"
    >
        <table:extension>
            <OverflowToolbar style="Clear">
                <Title
                    id="title"
                    text="{myPropertyValues>/title}"
                />
                <ToolbarSpacer />
                <Button
                    text="Create"
                    press="onAddNewLOCItem"
                    type="Transparent"
                    tooltip="Create new"
                    visible="false"
                />
                <Button
                    id="idDeleteRow"
                    text="Delete"
                    press="onDeleteRow"
                    type="Transparent"
                    enabled="false"
                    visible="false"
                />
                <Button
                    icon="sap-icon://action-settings"
                    press="openPersoDialog"
                    visible="false"
                />
                <VBox visible="false">
                    <SegmentedButton selectedKey="less">
                        <items>
                            <SegmentedButtonItem
                                icon="sap-icon://detail-less"
                                key="less"
                            />
                            <SegmentedButtonItem
                                icon="sap-icon://detail-more"
                            />
                        </items>
                    </SegmentedButton>
                </VBox>
                <Button
                    icon="sap-icon://excel-attachment"
                    press="onExport"
                    visible="false"
                />
            </OverflowToolbar>
        </table:extension>

        <table:noData>
            <IllustratedMessage enableVerticalResponsiveness="true" />
        </table:noData>

        <table:columns>
            <table:Column
                id="Advlicno"
                sortProperty="Advlicno"
                headerMenu="menu"
            >
                <Label
                    wrapping="true"
                    text="Advance License No."
                />
                <table:template>
                    <Label text="{oModelForItemTable>Advlicno}" />
                </table:template>
            </table:Column>

            <table:Column
                id="Type"
                sortProperty="Type"
                headerMenu="menu"
            >
                <Label
                    wrapping="true"
                    text="Type"
                />
                <table:template>
                    <Input value="{oModelForItemTable>Type}" />
                </table:template>
            </table:Column>

            <table:Column
                id="LineNumber"
                sortProperty="LineNumber"
                headerMenu="menu"
            >
                <Label
                    wrapping="true"
                    text="Line Number"
                />
                <table:template>
                    <Input value="{oModelForItemTable>LineNumber}" />
                </table:template>
            </table:Column>
            <table:Column
                id="LineType"
                sortProperty="LineType"
                headerMenu="menu"
            >
                <Label
                    wrapping="true"
                    text="Line Type"
                />
                <table:template>
                    <Input value="{oModelForItemTable>LineType}" />
                </table:template>
            </table:Column>
            <table:Column
                id="LineStatus"
                sortProperty="LineStatus"
                headerMenu="menu"
            >
                <Label
                    wrapping="true"
                    text="Status"
                />
                <table:template>
                    <Input value="{oModelForItemTable>LineStatus}" />
                </table:template>
            </table:Column>

            <table:Column
                id="SionNo"
                sortProperty="SionNo"
                headerMenu="menu"
            >
                <Label
                    wrapping="true"
                    text="SION No."
                />
                <table:template>
                    <Input value="{oModelForItemTable>SionNo}" />
                </table:template>
            </table:Column>
            <table:Column
                id="ExportItem"
                sortProperty="ExportItem"
                headerMenu="menu"
            >
                <Label
                    wrapping="true"
                    text="Export Item"
                />
                <table:template>
                    <Input value="{oModelForItemTable>ExportItem}" />
                </table:template>
            </table:Column>
            <table:Column
                id="ExportHsn"
                sortProperty="ExportHsn"
                headerMenu="menu"
            >
                <Label
                    wrapping="true"
                    text="Export HSN Code"
                />
                <table:template>
                    <Input value="{oModelForItemTable>ExportHsn}" />
                </table:template>
            </table:Column>

            <table:Column
                id="UnitField"
                sortProperty="UnitField"
                headerMenu="menu"
            >
                <Label
                    wrapping="true"
                    text="Unit"
                />
                <table:template>
                    <Input value="{oModelForItemTable>UnitField}" />
                </table:template>
            </table:Column>

            <table:Column
                id="ExportExQty"
                sortProperty="ExportExQty"
                headerMenu="menu"
            >
                <Label
                    wrapping="true"
                    text="Ex Qty"
                />
                <table:template>
                    <Input value="{oModelForItemTable>ExportExQty}" />
                </table:template>
            </table:Column>

            <table:Column
                id="ExportExchangeRate"
                sortProperty="ExportExchangeRate"
                headerMenu="menu"
            >
                <Label
                    wrapping="true"
                    text="Export Exchange Rate"
                />
                <table:template>
                    <Input value="{oModelForItemTable>ExportExchangeRate}" />
                </table:template>
            </table:Column>
        </table:columns>
    </table:Table>
</core:FragmentDefinition>
