                        <ToolbarSpacer />
                        <Button
                            id="idBtnAddNew"
                            text="Create new"
                            press="onAddNew"
                            type="Transparent"
                            tooltip="Create new Letter Of Credit"
                            icon="sap-icon://add"
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <ColumnListItem
                    type="Navigation"
                    press="onShowDetails"
                >
                    <cells>
                        <Text text="{oModelForTable>ZshippingBillNo}" />
                        <Text text="{oModelForTable>ZinvoiceDocument}" />
                        <Text text="{oModelForTable>ZportOfLoading}" />
                        <Text text="{oModelForTable>Zcha}" />
                        <Text text="{oModelForTable>Zcustomer}" />
                        <Text text="{oModelForTable>ZletExportDate}" />
                        <Text text="{oModelForTable>Zschemes}" />
                        <Text text="{oModelForTable>Zepcg}" />
                        <Text text="{oModelForTable>Zloc}" />
                        <Text text="{oModelForTable>ZshippingBillStatus}" />
                    </cells>
                </ColumnListItem>
                <columns>
                    <Column hAlign="End">
                        <Text text="Shipping Bill no" />
                    </Column>

                    <Column
                        demandPopin="true"
                        hAlign="End"
                    >
                        <Text text="Invoice document" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Port of Loading " />
                    </Column>
                    <Column
                        demandPopin="true"
                        hAlign="Center"
                        width="3rem"
                    >
                        <Text text="CHA" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Customer " />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Export Date" />
                    </Column>

                    <Column hAlign="Center">
                        <Text text="Scheme" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="EPCG" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Location" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="billing Status" />
                    </Column>
                </columns>
            </Table>

            <table:Table
                id="table"
                sort="onSort"
                columnResize="onColumnResize"
                columnMove="onColumnMove"
                rowMode="Auto"
                ariaLabelledBy="title"
                sap.ui.fl:flexibility="sap/m/flexibility/EngineFlex"
                
                selectionMode="MultiToggle"
                selectionBehavior="Row"
                rows="{oModelForTable>/}"
                showColumnVisibilityMenu="true"
                enableColumnFreeze="false"
                enableCellFilter="true"
                columnSelect="onColumnSelect"
                cellContextmenu="onProductIdCellContextMenu"
                enableGrouping="true"
                rowSelectionChange="onShowDetails"
            >
                <table:extension>
                    <OverflowToolbar style="Clear">
                        <Title id="title" />
                        <ToolbarSpacer />
                        <Button
                            text="Create"
                            press="onAddNew"
                            type="Transparent"
                            tooltip="Create new Letter Of Credit"
                        />
                        <Button
                            id="idDeleteRow"
                            text="Delete"
                            press="onDeleteRow"
                            type="Transparent"
                            enabled="false"
                        />
                        <Button
                            icon="sap-icon://action-settings"
                            press="openPersoDialog"
                        />
                        <VBox visible="false">
                            <SegmentedButton selectedKey="less">
                                <items>
                                    <SegmentedButtonItem
                                        icon="sap-icon://detail-less"
                                        key="less"
                                    />
                                    <SegmentedButtonItem
                                        icon="sap-icon://detail-more"
                                    />
                                </items>
                            </SegmentedButton>
                        </VBox>
                        <Button
                            icon="sap-icon://excel-attachment"
                            press="onExport"
                        />
                    </OverflowToolbar>
                </table:extension>

                <table:dependents>
                    <columnmenu:Menu id="menu">
                        <columnmenu:items>
                            <columnmenu:ActionItem
                                icon="sap-icon://sort"
                                label="Sort"
                                press="onColumnHeaderItemPress"
                            />
                            <columnmenu:ActionItem
                                icon="sap-icon://filter"
                                label="Filter"
                                press="onColumnHeaderItemPress"
                            />
                            <columnmenu:ActionItem
                                icon="sap-icon://group-2"
                                label="Groups"
                                press="onColumnHeaderItemPress"
                            />

                            <columnmenu:ActionItem
                                icon="sap-icon://table-column"
                                label="Columns"
                                press="onColumnHeaderItemPress"
                            />
                        </columnmenu:items>
                    </columnmenu:Menu>
                </table:dependents>
                <table:noData>
                    <IllustratedMessage enableVerticalResponsiveness="true" />
                </table:noData>
                <table:columns>
                    <table:Column
                        id="idClmShipBill"
                        width="8rem"
                        hAlign="End"
                        sortProperty="ZshippingBillNo"
                        headerMenu="menu"
                        resizable="true"
                        autoResizable="true"
                    >
                        <Label text="Shipping Bill No" />
                        <table:template>
                            <Label text="{oModelForTable>ZshippingBillNo}" />
                        </table:template>
                    </table:Column>
                    <table:Column
                        id="idClmDocNo"
                        width="8rem"
                        hAlign="End"
                        sortProperty="ZinvoiceDocument"
                        headerMenu="menu"
                        resizable="true"
                        autoResizable="true"
                    >
                        <Label text="Invoice Document" />
                        <table:template>
                            <Label text="{oModelForTable>ZinvoiceDocument}" />
                        </table:template>
                    </table:Column>

                    <table:Column
                        id="idClmPortOfLoading"
                        width="8rem"
                        hAlign="End"
                        sortProperty="ZportOfLoading"
                        headerMenu="menu"
                        resizable="true"
                        autoResizable="true"
                    >
                        <Label text="Port Of Loading" />
                        <table:template>
                            <Label text="{oModelForTable>ZportOfLoading}" />
                        </table:template>
                    </table:Column>
