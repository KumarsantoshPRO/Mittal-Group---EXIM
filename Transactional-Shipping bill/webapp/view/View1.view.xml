<mvc:View
    controllerName="zmg.pro.exim.transactionalshippingbill.exim.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    height="100%"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:svm="sap.ui.comp.smartvariants"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:tcm="sap.m.table.columnmenu"
>
    <f:DynamicPage
        showFooter="false"
        fitContent="true"
        headerExpanded="true"
    >
        <f:title>
            <f:DynamicPageTitle stateChange="onDPTStateChange">
                <f:heading>
                    <Title
                        text="Filter Bar"
                        textAlign="Center"
                        titleStyle="H3"
                    />
                </f:heading>
                <f:actions>
                    <Button
                        id="idBtnDPTFilterGo"
                        text="Search"
                        press="onSearch"
                        visible="true"
                        type="Emphasized"
                        icon="sap-icon://search"
                    />
                    <Button
                        id="idBtnDPTFilterClear"
                        text="Clear"
                        press="onClearFilters"
                        visible="true"
                        type="Attention"
                        icon="sap-icon://clear-filter"
                    />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <form:SimpleForm
                        editable="true"
                        layout="ColumnLayout"
                        columnsL="3"
                        columnsM="3"
                        columnsXL="3"
                    >
                        <form:content>
                            <Label text="Shipping Bill Number" />
                            <Input
                                id="idInpF4_SBNumber"
                                value=""
                                valueHelpIconSrc="sap-icon://value-help"
                                showValueHelp="true"
                                valueHelpRequest="onShippingBillHelp"
                                autocomplete="true"
                                placeholder="Shipping Bill Number"
                            />
                            <Label
                                text="Invoice Document Number"
                                visible="false"
                            />
                            <Input
                                id="idInpF4_InvoiceNumber"
                                value=""
                                valueHelpIconSrc="sap-icon://value-help"
                                showValueHelp="true"
                                autocomplete="true"
                                placeholder="Invoice Document Number"
                                visible="false"
                            />

                            <Label text="Created Date" visible="false"/>
                            <DatePicker
                                id="idDP_CreatedDate"
                                value=""
                                placeholder="Created Date"
                                visible="false"
                            />
                        </form:content>
                    </form:SimpleForm>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <Table
                id="idTable"
                sticky="ColumnHeaders,HeaderToolbar"
                growing="true"
                items="{oModelForTable>/}"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            text="Shipping Bill List"
                            level="H2"
                        />
                        <!-- <Button
                            tooltip="Search any key word"
                            icon="sap-icon://search"
                            press="handleSeacrch"
                            visible="false"
                        />
                        <Button
                            tooltip="Mutiselect"
                            icon="sap-icon://multiselect-none"
                            press="handleMultiSelectButtonPressed"
                            visible="false"
                        />
                        <Button
                            tooltip="Sort"
                            icon="sap-icon://sort"
                            press="handleSortButtonPressed"
                            visible="false"
                        />
                        <Button
                            tooltip="Filter"
                            icon="sap-icon://filter"
                            press="handleFilterButtonPressed"
                            visible="false"
                        />
                        <Button
                            tooltip="Group"
                            icon="sap-icon://group-2"
                            press="handleGroupButtonPressed"
                            visible="false"
                        /> -->
                        <ToolbarSpacer />
                        <Button
                            id="idBtnAddNew"
                            text="Create new"
                            press="onAddNew"
                            type="Emphasized"
                            tooltip="Create new Letter Of Credit"
                            icon="sap-icon://add"
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <ColumnListItem
                    type="Navigation"
                    press="onShowDetails"
                >
                    <cells>
                        <Text text="{oModelForTable>ZshippingBillNo}" />
                        <Text text="{oModelForTable>ZinvoiceDocument}" />
                        <Text text="{oModelForTable>ZportOfLoading}" />
                        <Text text="{oModelForTable>Zcha}" />
                        <Text text="{oModelForTable>Zcustomer}" />
                        <Text text="{oModelForTable>ZletExportDate}" />
                        <Text text="{oModelForTable>Zschemes}" />
                        <Text text="{oModelForTable>Zepcg}" />
                        <Text text="{oModelForTable>Zloc}" />
                        <Text text="{oModelForTable>ZshippingBillStatus}" />
                    </cells>
                </ColumnListItem>
                <columns>
                    <Column hAlign="End">
                        <Text text="Shipping Bill no" />
                    </Column>

                    <Column
                        demandPopin="true"
                        hAlign="End"
                    >
                        <Text text="Invoice document" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Port of Loading " />
                    </Column>
                    <Column
                        demandPopin="true"
                        hAlign="Center"
                        width="3rem"
                    >
                        <Text text="CHA" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Customer " />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Export Date" />
                    </Column>

                    <Column hAlign="Center">
                        <Text text="Scheme" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="EPCG" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Location" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="billing Status" />
                    </Column>
                </columns>
                
            </Table>
        </f:content>

        <!-- <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    type="Emphasized"
                    text="Print"
                    icon="sap-icon://print"
                />
            </OverflowToolbar>
        </f:footer> -->
    </f:DynamicPage>
</mvc:View>
