<core:FragmentDefinition
    height="100%"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
>
    <f:SimpleForm
        id="IdSFHeaderDetailsSection1"
        class="sapUiNoContentPadding"
        layout="ColumnLayout"
        columnsM="2"
        columnsL="2"
        columnsXL="2"
        adjustLabelSpan="true"
        editable="true"
    >
        <f:content>
            <Label
                id="IdLblShippingBillno"
                text="Shipping Bill No"
                class="bold-label"
            />
            <Input
                id="ShippingBillno_Value"
                value="{oModelForHeader>/ZshippingBillNo}"
            />
            <Label
                id="IdLblInvoiceDoc"
                text="Invoice Document"
                class="bold-label"
            />
            <Input
                id="InvoiceDocValue"
                showSuggestion="true"
                showValueHelp="true"
                valueHelpRequest="onInvoiceNumberValueHelp"
                value="{oModelForHeader>/ZinvoiceDocument}"
            />
            <Label
                id="IdLblSecCreateDate"
                text="Create Date and Time"
                class="bold-label"
            />
            <DatePicker
                id="IdDPCreateDate"
                value="{path:'oModelForHeader>/ZcreateDate', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'dd/MM/yyyy'}}"
                displayFormat="dd/MM/yyyy"
                valueFormat="dd/MM/yyyy"
                editable="false"
            />

            <TimePicker
                id="IdTPCreateTime"
                value="{path:'oModelForHeader>/ZcreateTime', type: 'sap.ui.model.type.Time', formatOptions: {pattern: 'HH:mm:ss'}}"
                editable="false"
            />

            <Label
                id="IdLblCountryOfBL"
                text="Country of BL"
                class="bold-label"
            />
            <Input
                showValueHelp="true"
                value=" "
            />
            <Label
                id="IdLblPortOfLoad"
                text="Port Of Loading"
                class="bold-label"
            />
            <Input
                showValueHelp="true"
                value="{oModelForHeader>/ZportOfLoading}"
                id="_IDGenInput4"
            />

            <Label
                id="IdLblICDPortCode"
                text="ICD - PORT CODE "
                class="bold-label"
            />
            <Input value="" />

            <Label
                id="IdLblCha"
                text="CHA"
                class="bold-label"
            />

            <Input
                id="CountryofBLValue"
                value="{oModelForHeader>/Zcha}"
            />

            <!--  -->

            <Label
                id="IdLblShippingBillStatus"
                text="Shipping Bill Status"
                class="bold-label"
            />
            <Select
                forceSelection="true"
                id="ShippingBillStatusValue"
                selectedKey="{oModelForHeader>/ZshippingBillStatus}"
            >
                <core:Item
                    id="item1"
                    key="final"
                    text="Final"
                />
                <core:Item
                    id="item2"
                    key="provisional"
                    text="Provisional"
                />
                <core:Item
                    id="item3"
                    key="amendment"
                    text="Amendment"
                />
            </Select>
            <Label
                id="IdLblRCMCNo"
                text="RCMC No"
                class="bold-label"
            />
            <Input value="" />

            <Label
                id="IdLblShippingBillDate"
                text=" Shipping Bill Date"
                class="bold-label"
            />
            <DatePicker value="" />

            <Label
                id="IdLblStateOfOrigin"
                text="State of Origin"
                class="bold-label"
            />
            <Input value="{oModelForHeader>/ZstateOfOrigin}" />

            <Label
                id="IdLblPortOfDischarge"
                text="Port of discharge"
                class="bold-label"
            />
            <Input value="" />

            <Label
                id="IdLblDestinationCountry"
                text="Destination Country"
                class="bold-label"
            />
            <Input
                value="{oModelForHeader>/ZdestinationCountry}"
                id="StateofOriginValue"
            />
            <Label
                id="IdLblFCValueCurr"
                text="FC Value Foreign Currency"
                class="bold-label"
            />
            <Input value="{oModelForHeader>/ZforeignCurrency}" />
        </f:content>
    </f:SimpleForm>
</core:FragmentDefinition>
